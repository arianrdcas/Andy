    {
      installations.map((installation) => (
        <div class="w-full mt-10 bg-white shadow-xl shadow-stone-400 rounded-lg overflow-hidden cursor-pointer">
          <img
            src={installation.imagen}
            alt="DescripciÃ³n de la imagen"
            class="w-full h-56 object-contain"
          />
          <div class="p-4">
            <h2 class="text-lg font-semibold text-gray-800 text-center">
